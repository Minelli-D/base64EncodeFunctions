    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/index.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "tasks": [
                {
                  "label": "Client Build",
                  "command": "npm start",
                  "args": [""],
                }],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        }
    ]
}